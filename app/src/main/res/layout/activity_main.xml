<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:background="@color/purple_500"
        android:gravity="center"
        android:text="@string/header"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="20dp"
        tools:ignore="RtlCompat,SpUsage,TextSizeCheck" />

    <ListView
        android:id="@+id/myList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/linearLayout"
        android:layout_below="@id/textView"
        android:layout_marginTop="-3dp"
        android:layout_marginBottom="3dp"
        android:padding="10dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:autofillHints="type"
            android:hint="@string/hint"
            tools:ignore="MissingConstraints,VisualLintTextFieldSize" />

        <Switch
            android:id="@+id/switch2"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/toggle"
            tools:ignore="UseSwitchCompatOrMaterialXml,VisualLintBounds,VisualLintButtonSize" />

        <Button
            android:id="@+id/myButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:backgroundTint="@color/purple_500"
            android:text="@string/myButton"
            android:textColor="#D1C4E9"
            tools:ignore="VisualLintBounds,VisualLintButtonSize" />

    </LinearLayout>

</RelativeLayout>
